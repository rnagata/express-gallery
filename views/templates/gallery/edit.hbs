<form action="/gallery/{{data.attributes.id}}?_method=PUT" method="POST">
  <div>
    <label for="author">Author: </label>
    <input type="text" name="author" value="{{data.attributes.author}}">
    <label for="title">Title: </label>
    <input type="text" name="title" value="{{data.attributes.title}}">
    <label for="link">Link: </label>
    <input type="text" name="link" value="{{data.attributes.link}}">
  </div>
  <div>
    <label for="description">Description: </label>
  </div>
    <textarea rows="10" cols= "100" name="description">{{data.attributes.description}}</textarea>
  <div>
    <button type="submit">Submit</button>
  </div>
</form>